<link rel="stylesheet" href="/stylesheets/style.css" />
<div>
    <div>
        <h1>Ironhack Cinema </h1>
        <p>Click on the movie to check the showtimes!</p>
    </div>
    {{#each allMovies}}
        <div>
            <img src="{{this.image}}" alt="movie image">
            <p>{{this.title}}</p>
            <a href="/movies/{{_id}}">See more</a>
        </div>
    {{/each}}

</div>